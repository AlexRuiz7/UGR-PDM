<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textoNombrePersona"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="12dp"
        android:hint="Nombre..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textoApellidosPersona"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="12dp"
        android:hint="Apellidos..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textoCorreoPersona"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingTop="12dp"
        android:hint="Correo electrónico..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textoPasswordPersona"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingTop="12dp"
        android:hint="Contraseña..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:text="Lista de Personas"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lv_personas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#81FFFFFF"
        android:visibility="visible" />

</LinearLayout>