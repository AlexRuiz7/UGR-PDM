<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/player_one_photo"
        android:layout_width="@dimen/squared_thumbnail"
        android:layout_height="@dimen/squared_thumbnail"
        android:layout_weight="1"
        android:contentDescription="@string/user_image_description"
        android:src="@android:drawable/ic_menu_camera"
        tools:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/player_one_displayName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:text="User display name" />


    <TextView
        android:id="@+id/divider"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/listDivider"
        android:gravity="center"
        android:text="vs"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/player_two_displayName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:text="User display name" />

    <ImageView
        android:id="@+id/player_two_photo"
        android:layout_width="@dimen/squared_thumbnail"
        android:layout_height="@dimen/squared_thumbnail"
        android:layout_weight="1"
        android:contentDescription="@string/user_image_description"
        android:src="@android:drawable/ic_menu_camera"
        tools:background="@android:color/darker_gray" />

</LinearLayout>